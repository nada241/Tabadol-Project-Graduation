@model HomeViewModel
@{
	Layout = "_Layout1";
    ViewData["Title"] = "Home";
}


<body>
	
	
	<!-- home page slider -->
	<div class="homepage-slider">
		<!-- single home slider -->
		<div class="single-homepage-slider homepage-bg-1">
			<div class="container">
				<div class="row">
					<div class="col-md-12 col-lg-7 offset-lg-1 offset-xl-0">
						<div class="hero-text">
							<div class="hero-text-tablecell">
								<p class="subtitle">Tabadol</p>
								<h1>Exchange Your Old Staff</h1>
								<div class="hero-btns">
									<a asp-controller="Account" asp-action="Registration" class="boxed-btn">Sign Up</a>
									<a asp-controller="ContactUs" asp-action="Index" class="bordered-btn">Contact Us</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- single home slider -->
		<div class="single-homepage-slider homepage-bg-2">
			<div class="container">
				<div class="row">
					<div class="col-lg-10 offset-lg-1 text-center">
						<div class="hero-text">
							<div class="hero-text-tablecell">
								<p class="subtitle">Tabadol</p>
								<h1>Save Your Money</h1>
								<div class="hero-btns">
									<a asp-controller="Account" asp-action="Registration" class="boxed-btn">Sign Up</a>
									<a asp-controller="ContactUs" asp-action="Index" class="bordered-btn">Contact Us</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- single home slider -->
		<div class="single-homepage-slider homepage-bg-3">
			<div class="container">
				<div class="row">
					<div class="col-lg-10 offset-lg-1 text-right">
						<div class="hero-text">
							<div class="hero-text-tablecell">
								<p class="subtitle">Tabadol</p>
								<h1>You Can Exchange Any Thing</h1>
								<div class="hero-btns">
									<a asp-controller="Account" asp-action="Registration" class="boxed-btn">Sign Up</a>
									<a asp-controller="ContactUs" asp-action="Index" class="bordered-btn">Contact Us</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end home page slider -->

	<!-- features list section -->
	<div class="list-section pt-80 pb-80">
		<div class="container">

			<div class="row">
				<div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
					<div class="list-box d-flex align-items-center">
						<div class="list-icon">
							<i class="fas fa-shipping-fast"></i>
						</div>
						<div class="content">
							<h3>Fast Shipping</h3>
							<p>Fast Delvering for Products</p>
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
					<div class="list-box d-flex align-items-center">
						<div class="list-icon">
							<i class="fas fa-phone-volume"></i>
						</div>
						<div class="content">
							<h3>24/7 Support</h3>
							<p>Get support all day</p>
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-6">
					<div class="list-box d-flex justify-content-start align-items-center">
						<div class="list-icon">
							<i class="fas fa-sync"></i>
						</div>
						<div class="content">
							<h3>Points</h3>
							<p>Get 100 Points when Signing Up</p>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
	<!-- end features list section -->

	<!-- product section -->	
	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="section-title">	
						<h3><span class="orange-text">Recent </span> Products</h3>
						<p>Find the latest and recrnt product to exchange it</p>
					</div>
				</div>
			</div>

			<div class="row">
				@foreach(var item in Model.products)
				{
					
					<div class="col-lg-4 col-md-6 text-center">
					<div class="single-product-item">
						<div class="product-image">
							<a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId"><img src="@item.PhotoUrl" alt="" style="height:200px;"></a>
						</div>
						<h3>@item.ProductName</h3>
						<p class="product-price">@item.Points Points </p>
						<a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.ProductId" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
					</div>
				</div>
				}
				
			</div>
			
			</div>
		</div>
	</div>
	<!-- end product section -->

	
	<!-- advertisement section -->
	<div class="abt-section mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-12">
					<div class="abt-bg">
					</div>
				</div>
				<div class="col-lg-6 col-md-12">
					<div class="abt-text">
						<p class="top-sub">Customer convenience matters to us.</p>
						<h2>We are <span class="orange-text">Tabadol</span></h2>
						<p>Tabadol is Website for the exchange of products, You can exchange your old staff with other staff you really need without spenging any money.</p>
						<p>In Tabadol we work with Points not cash, when you sign up you get 100 points to start your exchange operation and you earn more points with time When offering products for exchange.</p>
						<a href="signup.html" class="boxed-btn mt-4">Sign Up</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end advertisement section -->
	
	<!-- donate banner -->
	<section class="shop-banner">
    	<div class="container">
        	<h3>You can also Donate  <br>your unneeded Staff with </h3>
			<h3><span class="orange-text">Tabadol...</span></h3>
            <a asp-controller="Associations" asp-action="Index" a class="cart-btn btn-lg">Donate Now</a>
        </div>
    </section>
	<!-- donate banner -->

	<!-- testimonail-section -->
	<div class="testimonail-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 offset-lg-1 text-center">
					<div class="testimonial-sliders">
						@foreach(var item in Model.generalFeedbacks){
							
							<div class="single-testimonial-slider">
							<div class="client-avater">
								<img src="@item.User.ProfilePictureUrl" alt="">
								
							</div>
							<div class="client-meta">
								<h3>@item.User.UserName </h3>
								<p class="testimonial-body">
									@item.Message
									</p>
								<div class="last-icon">
									<i class="fas fa-quote-right"></i>
								</div>
							</div>
						</div>
						}
						
					</div>
					<div>
						<a asp-controller="GeneralFeedbacks" asp-action="Index" class="cart-btn btn-lg">Write your own feedback</a>

					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end testimonail-section -->
</body>
