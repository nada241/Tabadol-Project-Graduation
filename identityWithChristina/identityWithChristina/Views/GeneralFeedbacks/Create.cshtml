@model identityWithChristina.ViewModel.CreateGFeedViewModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>General Feedback</p>
					<h1>Feedback</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->

 <!--start of feedback-->
	<div class="feedback-from-section mt-150 mb-150 ">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 mb-5 mb-lg-0 align-content-center">
					<div class="form-title">
						<h2>Write Your Own Feedback</h2>
						<p>Your Feedback help us to improve our quality and service.</p>
					</div>
				 	<div id="form_status"></div>
					<div class="contact-form">
						<form asp-action="Create" method="post">
							 <div asp-validation-summary="All" class="text-danger"></div>
							<p>
								<input asp-for="name" placeholder="@User.Identity.Name" name="name"  id="name">
								<input asp-for="phone" placeholder="Phone" name="phone" id="phone">
							</p>
							<p>
								<input asp-for="email" type="email" placeholder="Email" name="email" id="email">
								<input asp-for="Rate" type="number" maxlength="5" width="100%" placeholder="⭐⭐⭐⭐⭐" style="width:360px; height:60px" />
							</p>
							<p>
								

								<textarea asp-for="message" name="message" id="message" cols="30" rows="10" placeholder="Feedback"></textarea>
@*								<input asp-for="message" name="message" id="message" cols="30" rows="10" placeholder="Feedback">
*@								</p>
						
							<p><input class="btnedit" type="submit" value="Send"></p>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
    <!--end of feedback-->

	<!--comment Section-->

	@foreach (var item in ViewData["feedlist"] as List<GeneralFeedback>)
	{
		
	
	<section style="background-color: white;">
		<div class="container py-5" >
		  <div class="row d-flex">
			<div class="col-md-12 col-lg-10 col-xl-8">
			  <div class="card" >
				<div class="card-body" style="background-color: #eee;" >
				  <div class="d-flex flex-start align-items-center">
					<img class="rounded-circle shadow-1-strong me-3"
					  src=@item.User.ProfilePictureUrl alt="avatar" width="60"
					  height="60" />
					
					<div>

					   <div style="margin-left:600px;" >

							 @if (User.IsInRole("Admin"))
										{
									<li style="list-style-type:none; color:#F28123"><a asp-area="" asp-controller="GeneralFeedbacks" asp-action="Delete" asp-route-id="@item.FeedId" style="color:#F28123">Delete</a></li>
											
										}

					   </div>
										

									
						@*  <div class="mx-5" >
						  @if (User.IsInRole("Admin"))
									{
											<nav class="main-menu" >
					                 	<ul>
					                <li style="display:inline; float:right;" > 
								    <a ><i class="fa-solid fa-ellipsis"></i></a>
									<ul class="sub-menu">
									<li><a asp-area="" asp-controller="GeneralFeedbacks" asp-action="Delete" asp-route-id="@item.FeedId">Delete</a></li>
									</ul>
									</li>
								        </ul>
								               </nav>
									}
					  </div>	*@
					  <h6 class="fw-bold text-warning mb-1"> @item.User.UserName</h6>
					  <p class="text-muted small mb-0">
						Shared publicly - @item.Date
					  </p>
					</div>
				  </div>
	  
				  <p class="mt-3 mb-4 pb-2">
					  @item.Message
				
				  </p>
	  
				  <div class="small d-flex justify-content-start">
					<a href="#!" class="d-flex align-items-center me-3">
					  <i class="far fa-thumbs-up me-2"></i>
					  <p class="mb-0">Like</p>
					</a>
					<a href="#!" class="d-flex align-items-center me-3">
					  <i class="far fa-comment-dots me-2"></i>
					  <p class="mb-0">Comment</p>
					</a>
					<a href="#!" class="d-flex align-items-center me-3">
					  <i class="fas fa-share me-2 "></i>
					  <p class="mb-0">Share</p>
					</a>
						<a href="#!" class="d-flex align-items-center me-3">
                        <i class="fa-solid fa-star"></i>
						 <p class="mb-0">@item.Rate</p>
                        </a>
				  </div>
				</div>
				<div class="card-footer py-3 border-0" style="background-color: #eee;">
				  <div class="d-flex flex-start w-100">
					<img class="rounded-circle shadow-1-strong me-3"
					  src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
					  height="40" />
					<div class="form-outline w-100">
					  <textarea class="form-control" id="textAreaExample" rows="4"
						style="background: #fff;"></textarea>
					  <label class="form-label" for="textAreaExample">Message</label>
					</div>
				  </div>
				  <div class="float-end mt-2 pt-1">
					<button type="button" class="btn btn-warning btn-sm">Post comment</button>
					<button type="button" class="btn btn-outline-warning btn-sm">Cancel</button>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		</div>
	  </section>
	<!--end of comment section-->
	}


