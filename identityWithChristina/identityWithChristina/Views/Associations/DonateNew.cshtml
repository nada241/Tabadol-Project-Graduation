
@{
     Layout = "_Layout1";
    ViewData["Title"] = "Donate New Product";
}
@model ProductAssociationViewModel

	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<h1>Donating for @Model.association.Assname</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

<div class="contact-from-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 mb-5 mb-lg-0">
					<div class="form-title">
					</div>
				 	<div id="form_status"></div>
					<div class="contact-form">
						 <form asp-action="DonateNew" enctype="multipart/form-data" method="post">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<p>
			                  <div class="form-group">
                                 <input asp-for="product.DonationAssId"  value="@Model.association.Assid" hidden >
                                <label asp-for="product.ProductName" class="control-label">Product Name</label>
                                <input asp-for="product.ProductName" class="form-control" style="width:100%;" type="text" />
                                <span asp-validation-for="product.ProductName" class="text-danger"></span>
                                 </div>
							   </p>
							    <p>
								 <div class="form-group">
                                    <label asp-for="product.Points" class="control-label"> Points </label>
                                    <input asp-for="product.Points" class="form-control" style="width:100%;" type="number" />
                                    <span asp-validation-for="product.Points" class="text-danger"></span>
                                </div>
							</p>
							<p>
                                 <div class="form-group">
                                    <label asp-for="product.ProductDescription" class="control-label"> Product Description </label>
                                     <textarea asp-for="product.ProductDescription" class="form-control"  cols="30" rows="10" placeholder="Description"></textarea>
                                    <span asp-validation-for="product.ProductDescription" class="text-danger"></span>
                                </div>
								</p>
                                <p>
                                      <div class="form-group">
                                            <label asp-for="product.PhotoUrl" class="control-label"> Product Image</label>
                                            <input asp-for="product.PhotoUrl" class="form-control" style="width:100%;"  type="file" name="file"  placeholder=" Category Image" />
                                            <span asp-validation-for="product.PhotoUrl" class="text-danger"></span>
                                        </div>

							</p>
                           <p>
                                 <div class="form-group">
                                    <label asp-for="product.CategoryId" class="control-label">Category Name</label> 
                                    <select asp-for="product.CategoryId" style="width:100%;" class ="form-control" asp-items="@ViewBag.categoryee">
                                     <option>Select Category</option>
                                    </select>
                                </div>
                                </p>
                                
							<input type="hidden" name="token"/>
							<p><input type="submit" value="Submit"></p>
						</form>
					</div>
				</div>
		
			</div>
		</div>
	</div>


