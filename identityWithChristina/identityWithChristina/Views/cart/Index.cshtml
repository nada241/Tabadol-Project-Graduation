@model CartViewModel
@{
	Layout = "_Layout1";
    ViewData["Title"] = "Cart";
}

<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Tabadol Your Own Product</p>
						<h1>Cart</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- cart -->
	<div class="cart-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove font-weight-bold"></th>
									<th class="product-image font-weight-bold">Product Image</th>
									<th class="product-name font-weight-bold">Name</th>
									<th class="product-price font-weight-bold">Points</th>
								</tr>
							</thead>
							<tbody>
								
								@if(Model.OrderDetails!=null)
								{
							    @foreach(var item in Model.OrderDetails)
							    {
								<tr class="table-body-row">
									 <td class="product-remove"><i class="fa-solid fa-trash i-style" >  @Html.ActionLink("Delete", "Delete", new { Oid=item.OdrerId,Pid=item.ProductId })</i></td>
									<td class="product-image"><img src="@item.Product.PhotoUrl" alt=""></td>
									<td class="product-name">@item.Product.ProductName</td>
									<td class="product-price">@item.Product.Points pts</td>
								</tr>
							}	
							}
							else{
                                   <tr class="table-body-row">
									<td colspan="4" class="text-danger"> Empty Cart </td>
									
								</tr>
							}
							</tbody>
						</table>
					</div>
				</div>

				<div class="col-lg-12 my-5">
					<div class="total-section">
					@if(Model.Order!=null)
					 {
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th class="font-weight-bold">Total</th>
									<th class="font-weight-bold">Points</th>
								</tr>
							</thead>
							<tbody>
								<tr class="total-data">
									<td><strong>Subtotal: </strong></td>
									<td>@Model.Order.TotalPoints</td>
								</tr>
							</tbody>
						</table>
						<div class="cart-buttons">
							<a asp-action="Index" asp-controller="products" class="boxed-btn">Add Product</a>
							<a asp-action="checkout" asp-controller="cart" asp-route-id="@Model" class="boxed-btn black"> Exchange </a>
						</div>
					}
					else
					{
						<div class="cart-buttons">
							<a asp-action="Index" asp-controller="products" class="boxed-btn">Add Product</a>
							
						</div>
					}
					</div>
                    
				</div>
			</div>
		</div>
	</div>
	<!-- end cart -->

