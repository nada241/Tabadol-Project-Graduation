
@model identityWithChristina.ViewModel.EditProfileViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Edit</h1>

<style>
    .card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}
</style>
<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Student registration form</h3>
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" asp-for="Lname" placeholder=@Model.Lname  class="form-control form-control-lg" />
                      <label class="form-label" for="form3Example1m">Last name</label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" @*asp-for="city"*@ placeholder=@Model.city class="form-control form-control-lg" />
                      <label class="form-label" for="form3Example1n">City</label>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" asp-for="country" placeholder=@Model.country class="form-control form-control-lg" />
                      <label class="form-label" for="form3Example1m1">Country</label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="email" asp-for="email" placeholder=@Model.email class="form-control form-control-lg" />
                      <label class="form-label" for="form3Example1n1">Email</label>
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" asp-for="phone" placeholder=@Model.phone class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example8">Phone</label>
                </div>

                <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                  <h6 class="mb-0 me-4">Gender: </h6>

                  <div class="form-check form-check-inline mb-0 me-4">
                    <input class="form-check-input" asp-for=@Model.gender type="radio" name="gender" id="femaleGender"
                      value="femal" />
                    <label class="form-check-label" for="femaleGender">Female</label>
                  </div>

                  <div class="form-check form-check-inline mb-0 me-4">
                    <input class="form-check-input" type="radio" asp-for=@Model.gender name="gender" id="maleGender"
                      value="male" />
                    <label class="form-check-label" for="maleGender">Male</label>
                  </div>

              

                </div>
                 <select class="selectpicker countrypicker" data-flag="true" data-default="PT" ></select>
                <div class="row">
                  <div class="col-md-6 mb-4">
                     

                    <select asp-for="country" class="select">
                      <option value="1">State</option>
                      <option value="2">Option 1</option>
                      <option value="3">Option 2</option>
                      <option value="4">Option 3</option>
                    </select>

                  </div>
                  <div class="col-md-6 mb-4">

                    <select asp-for="city" class="select">
                      <option value="1">City</option>
                      <option value="2">Option 1</option>
                      <option value="3">Option 2</option>
                      <option value="4">Option 3</option>
                    </select>

                  </div>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" asp-for="postalCode" placeholder="@Model.postalCode" class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example9">Postal Code</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" asp-for="street" placeholder="@Model.street" class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example90">Street</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="file" asp-for="profilePicture" name="profilePicture"  class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example99">Course</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="number" asp-for="points" max="100" class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example97">Points</label>
                </div>

                <div class="d-flex justify-content-end pt-3">
                 
                  <button type="submit" class="btn btn-warning btn-lg ms-2">Update</button>
                </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>