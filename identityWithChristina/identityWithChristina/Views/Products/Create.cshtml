@model identityWithChristina.Models.Product

@{
    
    Layout = "_Layout1";
    ViewData["Title"] = "Create Product";
}

<div class="contact-from-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 mb-5 mb-lg-0">
					<div class="form-title">
					</div>
				 	<div id="form_status"></div>
					<div class="contact-form">
						 <form asp-action="Create" enctype="multipart/form-data" method="post">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<p>
			                  <div class="form-group">
                                <label asp-for="ProductName" class="control-label">Product Name</label>
                                <input asp-for="ProductName" class="form-control" style="width:100%;" type="text" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                                 </div>
							   </p>
							    <p>
								 <div class="form-group">
                                    <label asp-for="Points" class="control-label"> Points </label>
                                    <input asp-for="Points" class="form-control" style="width:100%;" type="number" />
                                    <span asp-validation-for="Points" class="text-danger"></span>
                                </div>
							</p>
							<p>
                                 <div class="form-group">
                                    <label asp-for="ProductDescription" class="control-label"> Product Description </label>
                                     <textarea asp-for="ProductDescription" class="form-control"  aria-label="With textarea" name="message" id="message" cols="30" rows="10" placeholder="Description"></textarea>
                                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                                </div>
								</p>
                                <p>
                                      <div class="form-group">
                                            <label asp-for="PhotoUrl" class="control-label"> Product Image</label>
                                            <input asp-for="PhotoUrl" class="form-control" style="width:100%;" name="file" type="file"  placeholder=" Category Image" />
                                            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                                        </div>

							</p>
                           <p>
                                 <div class="form-group">
                                    <label asp-for="CategoryId" class="control-label">Category Name</label> 
                                    <select asp-for="CategoryId" style="width:100%;" class ="form-control" asp-items="@ViewBag.categoryee">
                                     <option>Select Category</option>
                                    </select>
                                </div>
                                </p>
                                
							<input type="hidden" name="token"/>
							<p><input type="submit" value="Submit"></p>
						</form>
					</div>
				</div>
		
			</div>
		</div>
	</div>
