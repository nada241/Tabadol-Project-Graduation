@using identityWithChristina.ViewModel
@model CategoryProductViewModel

@{
    
   Layout = "_Layout1";
    ViewData["Title"] = "Products";
}
	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Find Your needs and Explore</p>
						<h1>Products</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- products -->
	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="row">
                <div class="col-md-12">
                    <div class="product-filters">
						@if (@Model.Categories != null)
						{
                        <ul >
                            <li class="active" data-filter="*">All</li>
							@foreach (var item in Model.Categories) {

                               <li data-filter=".@item.CategoryId">@Html.DisplayFor(modelItem => item.CategoryName)</li>
							
								
							}
						
                        </ul>
						}

                    </div>
                </div>
            </div>
            </div>
            </div>
             <div class="row product-lists text-center mx-5">
			@foreach (var item in Model.Products) 
            {
                <div class="col-lg-4 col-md-6 text-center @item.CategoryId">
					<div class="single-product-item">
						<div class="product-image">
							<a asp-action="Details" asp-route-id="@item.ProductId"><img src="@Url.Content(item.PhotoUrl)" alt=""></a>
						</div>
						<h3>@Html.DisplayFor(modelItem => item.ProductName)</h3>
						<p class="product-price">@Html.DisplayFor(modelItem => item.Points) Points</p>
						<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ProductId" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
					</div>
				</div>
            }
				</div>


	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="~/css/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap/css/bootstrap.min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/css/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="~/css/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/css/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="~/css/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="~/css/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="~/css/css/responsive.css">
    <link rel="stylesheet" href="~/css/css/products.css" />